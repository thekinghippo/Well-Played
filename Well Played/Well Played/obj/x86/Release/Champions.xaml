<Page x:ConnectionId='1'
    x:Class="Well_Played.Champions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Well_Played"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:Well_Played.Models"
    mc:Ignorable="d" 
                        
    NavigationCacheMode="Enabled">

    <!--NavigationCacheMode="Enabled"-->

    <Page.Resources>
        <ResourceDictionary>
            <!-- Error Button -->
            <Style TargetType="Button" x:Key="NavButton">
                <Setter Property="Height" Value="48"/>
                <Setter Property="Width" Value="48"/>
                <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="FontSize" Value="20"/>
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='2' x:Name="WindowStates">
                <VisualState x:ConnectionId='3' x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="320"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>

                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='4' x:Name="MediumState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="600"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Refresh.Visibility" Value="Visible"/>
                        <!--<Setter Target="Search.Visibility" Value="Visible"/>-->
                        <Setter Target="CommandBar.VerticalAlignment" Value="Top"/>
                        <Setter Target="CommandBar.HorizontalAlignment" Value="Right"/>
                        <Setter Target="CommandBar.Margin" Value="0,-48,0,0"/>
                        <Setter Target="CommandBar.Width" Value="auto"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='5' x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1024"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>

                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <CommandBar x:ConnectionId='6' Name="CommandBar" VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                    Margin="0,0,0,-48" Width="auto">
            <AppBarButton x:ConnectionId='14' Name="Refresh" Icon="Refresh" Label="Refresh" Visibility="Collapsed"                      />
            <AppBarButton x:ConnectionId='15' Name="Search" Icon="Find" Label="Search" Visibility="Collapsed"/>
            <AppBarButton Icon="Filter" Label="Filter">
                <AppBarButton.Flyout>
                    <Flyout x:ConnectionId='16'                       >
                        <StackPanel Margin="-12">
                            <Grid x:ConnectionId='17' Height="32"                    >
                                <Rectangle x:ConnectionId='36' Name="All_Rect">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="RoyalBlue" 
                                        Opacity="0"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock x:ConnectionId='37' Name="BR" VerticalAlignment="Center" HorizontalAlignment="Center" Text="All"/>
                            </Grid>
                            <Grid x:ConnectionId='18' Height="32"                         >
                                <Rectangle x:ConnectionId='34' Name="Assassin_Rect">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="RoyalBlue" 
                                        Opacity="0"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock x:ConnectionId='35' Name="Assassin" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Assassin"/>                            
                            </Grid>
                            <Grid x:ConnectionId='19' Height="32"                        >
                                <Rectangle x:ConnectionId='32' Name="Fighter_Rect">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="RoyalBlue" 
                                        Opacity="0"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock x:ConnectionId='33' Name="Fighter" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Fighter"/>
                            </Grid>
                            <Grid x:ConnectionId='20' Height="32"                     >
                                <Rectangle x:ConnectionId='30' Name="Mage_Rect">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="RoyalBlue" 
                                        Opacity="0"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock x:ConnectionId='31' Name="Mage" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Mage"/>
                            </Grid>
                            <Grid x:ConnectionId='21' Height="32"                         >
                                <Rectangle x:ConnectionId='28' Name="Marksman_Rect">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="RoyalBlue" 
                                        Opacity="0"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock x:ConnectionId='29' Name="Marksman" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Marksman"/>
                            </Grid>
                            <Grid x:ConnectionId='22' Height="32"                        >
                                <Rectangle x:ConnectionId='26' Name="Support_Rect">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="RoyalBlue" 
                                        Opacity="0"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock x:ConnectionId='27' Name="Support" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Support"/>
                            </Grid>
                            <Grid x:ConnectionId='23' Height="32"                     >
                                <Rectangle x:ConnectionId='24' Name="Tank_Rect">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="RoyalBlue" 
                                        Opacity="0"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock x:ConnectionId='25' Name="Tank" VerticalAlignment="Center" HorizontalAlignment="Center" Text="Tank"/>
                            </Grid>
                        </StackPanel>
                    </Flyout>
                </AppBarButton.Flyout>
            </AppBarButton>
        </CommandBar>

        <Grid VerticalAlignment="Top" 
              Margin="12,-48,48,0" 
              Height="48">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:ConnectionId='11' Name="TitleBar"
                           Text="Champions"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           FontSize="20"/>
                <Grid Height="48" Width="48">
                    <ProgressRing x:ConnectionId='12' Name="MyProgressRing"                              
                                  Width="20"
                                  Height="20"
                                  Foreground="RoyalBlue"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                    <Button x:ConnectionId='13' Name="Error" Style="{StaticResource NavButton}"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Content="&#xE98F;" 
                            Visibility="Collapsed" 
                            Foreground="DarkOrange"                    >
                        <FlyoutBase.AttachedFlyout>
                            <Flyout>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="Error Loading Page" 
                                       Foreground="Red" 
                                       FontSize="20" 
                                       HorizontalAlignment="Center"/>
                                    <TextBlock Text="possible reasons include" 
                                       HorizontalAlignment="Center"
                                       Grid.Row="1"
                                       FontSize="12"/>
                                    <MenuFlyoutSeparator Grid.Row="2"/>
                                    <TextBlock Text="-Poor Internet Connection-"
                                       HorizontalAlignment="Center"
                                       Grid.Row="3"/>
                                    <TextBlock Text="-RIOT Server Timeout-"
                                       HorizontalAlignment="Center"
                                       Grid.Row="4"/>
                                    <Grid Grid.Row="5" Margin="0,12,0,0">
                                        <Rectangle Height="160"
                                           Width="160">
                                            <Rectangle.Fill>
                                                <SolidColorBrush Color="DimGray"/>
                                            </Rectangle.Fill>
                                        </Rectangle>
                                        <Image Source="assets/Heimerdinger_Error.jpg" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"                                   
                                   Height="150"
                                   Width="150"
                                   Stretch="fill"/>
                                    </Grid>
                                </Grid>
                            </Flyout>
                        </FlyoutBase.AttachedFlyout>
                    </Button>
                </Grid>
            </StackPanel>
        </Grid>

        <ListView x:ConnectionId='7' Name="ChampionListAdSpace" 
                                                         
                  IsItemClickEnabled="True"
                                                       Grid.ColumnSpan="2"
                  Padding="0,8,0,64"> <!--62-->
            <ListView.ItemTemplate>
                <DataTemplate                           >
                    <StackPanel x:ConnectionId='8' Orientation="Horizontal"
                                Padding="4">
                        <Grid Margin="12,0,0,0" Padding="0">
                            <Ellipse Width="52" Height="52" Fill="DimGray"/>
                            <Ellipse Width="48" Height="48">
                                <Ellipse.Fill>
                                    <ImageBrush x:ConnectionId='10'                                  />
                                </Ellipse.Fill>
                            </Ellipse>
                        </Grid>
                        <TextBlock x:ConnectionId='9'                     
                                   VerticalAlignment="Center"
                                   FontSize="18"
                                   Margin="12,0,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>

</Page>

