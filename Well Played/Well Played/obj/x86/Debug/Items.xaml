<Page x:ConnectionId='1'
    x:Class="Well_Played.Items"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Well_Played"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:Well_Played.Models"
    mc:Ignorable="d" 
    NavigationCacheMode="Enabled" 
                        >

    <Page.Resources>
        <ResourceDictionary>
            <Style TargetType="TextBlock" x:Key="Title">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="bold"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>
            <Style TargetType="TextBlock" x:Key="Content">
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="12,0,12,0"/>
            </Style>
            <Style TargetType="TextBlock" x:Key="SubContent">
                <Setter Property="FontSize" Value="11"/>
            </Style>
            <Style TargetType="Button" x:Key="NavButton">
                <Setter Property="Height" Value="48"/>
                <Setter Property="Width" Value="48"/>
                <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="FontSize" Value="20"/>
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='2' x:Name="WindowStates">
                <VisualState x:ConnectionId='3' x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="320"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>

                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='4' x:Name="MediumState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="600"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Refresh.Visibility" Value="Visible"/>
                        <Setter Target="Search.Visibility" Value="Visible"/>
                        <Setter Target="CommandBar.VerticalAlignment" Value="Top"/>
                        <Setter Target="CommandBar.HorizontalAlignment" Value="Right"/>
                        <Setter Target="CommandBar.Margin" Value="0,-48,0,0"/>
                        <Setter Target="CommandBar.Width" Value="auto"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='5' x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1024"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>

                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <CommandBar x:ConnectionId='6' Name="CommandBar" VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                    Margin="0,0,0,-48" Width="auto">
            <AppBarButton x:ConnectionId='14' Name="Refresh" Icon="Refresh" Label="Refresh" Visibility="Collapsed"                      />
            <AppBarButton x:ConnectionId='15' Name="Search" Icon="Find" Label="Search" Visibility="Collapsed"/>
            <AppBarButton Icon="Filter" Label="Filter">
                <AppBarButton.Flyout>
                    <Flyout x:ConnectionId='16' x:Name="FilterFlyout"                             >
                        <Grid x:ConnectionId='17' x:Name="___No_Name_">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid x:ConnectionId='18' x:Name="SRFilterGrid" Background="#B3B6B6B6" Width="56"                             >
                                <Button x:ConnectionId='41' x:Name="SRFilter" Width="56" Content="SR" HorizontalAlignment="Center">
                                    <Button.Background>
                                        <SolidColorBrush Color="RoyalBlue" Opacity="0"/>
                                    </Button.Background>
                                </Button>
                            </Grid>
                            <Grid x:ConnectionId='19' x:Name="TTFilterGrid" Background="#B3B6B6B6" Width="56" Grid.Column="1"                             >
                                <Button x:ConnectionId='40' x:Name="TTFilter" Width="56" Content="TT" HorizontalAlignment="Center">
                                    <Button.Background>
                                        <SolidColorBrush Color="RoyalBlue" Opacity="0"/>
                                    </Button.Background>
                                </Button>
                            </Grid>
                            <Grid x:ConnectionId='20' x:Name="HAFilterGrid" Background="#B3B6B6B6" Width="56" Grid.Column="2"                             >
                                <Button x:ConnectionId='39' x:Name="HAFilter" Width="56" Content="HA" HorizontalAlignment="Center">
                                    <Button.Background>
                                        <SolidColorBrush Color="RoyalBlue" Opacity="0"/>
                                    </Button.Background>
                                </Button>
                            </Grid>
                            <Grid x:ConnectionId='21' x:Name="CSFilterGrid" Background="#B3B6B6B6" Width="56" Grid.Column="3"                             >
                                <Button x:ConnectionId='38' x:Name="CSFilter" Width="56" Content="CS" HorizontalAlignment="Center">
                                    <Button.Background>
                                        <SolidColorBrush Color="RoyalBlue" Opacity="0"/>
                                    </Button.Background>
                                </Button>
                            </Grid>
                            <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
                                <TextBlock Text="Attack" Style="{StaticResource Title}" FontWeight="SemiBold"/>
                                <CheckBox x:ConnectionId='34' x:Name="DamageChkBox" Content="Damage"                                                                  />
                                <CheckBox x:ConnectionId='35' x:Name="CritChkBox" Content="Crit. Strike"                                                              />
                                <CheckBox x:ConnectionId='36' x:Name="ASChkBox" Content="Atk. Speed"                                                          />
                                <CheckBox x:ConnectionId='37' x:Name="LSChkBox" Content="LifeSteal"                                                          />
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2">
                                <TextBlock Text="Magic" Style="{StaticResource Title}" FontWeight="SemiBold"/>
                                <CheckBox x:ConnectionId='30' x:Name="APChkBox" Content="Ability Power"                                                          />
                                <CheckBox x:ConnectionId='31' x:Name="CDRChkBox" Content="CDR"                                                            />
                                <CheckBox x:ConnectionId='32' x:Name="ManaChkBox" Content="Mana"                                                              />
                                <CheckBox x:ConnectionId='33' x:Name="ManaRegenChkBox" Content="Mana Regen"                                                                        />
                            </StackPanel>
                            <StackPanel Grid.Row="2" Grid.ColumnSpan="2">
                                <TextBlock Text="Defense" Style="{StaticResource Title}" FontWeight="SemiBold"/>
                                <CheckBox x:ConnectionId='26' x:Name="HealthChkBox" Content="Health"                                                                  />
                                <CheckBox x:ConnectionId='27' x:Name="MRChkBox" Content="Magic Resist"                                                          />
                                <CheckBox x:ConnectionId='28' x:Name="HealthRegenChkBox" Content="Health Regen"                                                                            />
                                <CheckBox x:ConnectionId='29' x:Name="ArmorChkBox" Content="Armor"                                                                />
                            </StackPanel>
                            <StackPanel Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2">
                                <TextBlock Text="Misc." Style="{StaticResource Title}" FontWeight="SemiBold"/>
                                <CheckBox x:ConnectionId='22' x:Name="Movement" Content="Movement"                                                          />
                                <CheckBox x:ConnectionId='23' x:Name="ConsumableChkBox" Content="Consumables"                                                                          />
                                <CheckBox x:ConnectionId='24' x:Name="GoldIncome" Content="Gold Income"                                                              />
                                <CheckBox x:ConnectionId='25' x:Name="Vision" Content="Vision"                                                      />
                            </StackPanel>
                        </Grid>
                    </Flyout>
                </AppBarButton.Flyout>
            </AppBarButton>
        </CommandBar>

        <Grid VerticalAlignment="Top" 
              Margin="12,-48,48,0" 
              Height="48">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:ConnectionId='11' Name="TitleBar"
                           Text="Items"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           FontSize="20"/>
                <Grid Height="48" Width="48">
                    <ProgressRing x:ConnectionId='12' Name="MyProgressRing"                              
                                  Width="20"
                                  Height="20"
                                  Foreground="RoyalBlue"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                    <Button x:ConnectionId='13' Name="Error" Style="{StaticResource NavButton}"
                            Content="&#xE98F;" 
                            Visibility="Collapsed" 
                            Foreground="DarkOrange"                    >
                        <FlyoutBase.AttachedFlyout>
                            <Flyout>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="Error Loading Page" 
                                       Foreground="Red" 
                                       FontSize="20" 
                                       HorizontalAlignment="Center"/>
                                    <TextBlock Text="possible reasons include" 
                                       HorizontalAlignment="Center"
                                       Grid.Row="1"
                                       FontSize="12"/>
                                    <MenuFlyoutSeparator Grid.Row="2"/>
                                    <TextBlock Text="-Poor Internet Connection-"
                                       HorizontalAlignment="Center"
                                       Grid.Row="3"/>
                                    <TextBlock Text="-RIOT Server Timeout-"
                                       HorizontalAlignment="Center"
                                       Grid.Row="4"/>
                                    <Grid Grid.Row="5" Margin="0,12,0,0">
                                        <Rectangle Height="160"
                                           Width="160">
                                            <Rectangle.Fill>
                                                <SolidColorBrush Color="DimGray"/>
                                            </Rectangle.Fill>
                                        </Rectangle>
                                        <Image Source="assets/Heimerdinger_Error.jpg" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"                                   
                                   Height="150"
                                   Width="150"
                                   Stretch="fill"/>
                                    </Grid>
                                </Grid>
                            </Flyout>
                        </FlyoutBase.AttachedFlyout>
                    </Button>
                </Grid>
            </StackPanel>
        </Grid>

        <GridView x:ConnectionId='7' Name="ItemGridAdSpace" 
                                                     
                  IsItemClickEnabled="True"
                  Padding="12,4,12,66"                                     
                  HorizontalAlignment="Center"> <!--62-->
            <GridView.ItemTemplate>
                <DataTemplate                       >
                    <StackPanel x:ConnectionId='8' Height="104"
                                Padding="0,8,0,0">
                        <Grid>
                            <Rectangle Width="52" Height="52" Fill="DimGray"/>
                            <Image x:ConnectionId='10' Width="48" Height="48"                           />
                        </Grid>
                        <TextBlock x:ConnectionId='9'                     
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   Width="96"
                                   TextWrapping="WrapWholeWords"/>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>

