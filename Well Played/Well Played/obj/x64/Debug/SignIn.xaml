<Page
    x:Class="Well_Played.SignIn"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Well_Played"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <!-- Error Button -->
            <Style TargetType="Button" x:Key="NavButton">
                <Setter Property="Height" Value="48"/>
                <Setter Property="Width" Value="48"/>
                <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="FontSize" Value="20"/>
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='1' x:Name="WindowStates">
                <VisualState x:ConnectionId='2' x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="320"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>

                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='3' x:Name="MediumState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="600"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Refresh.Visibility" Value="Visible"/>
                        <Setter Target="Search.Visibility" Value="Visible"/>
                        <Setter Target="CommandBar.VerticalAlignment" Value="Top"/>
                        <Setter Target="CommandBar.HorizontalAlignment" Value="Right"/>
                        <Setter Target="CommandBar.Margin" Value="0,-48,0,0"/>
                        <Setter Target="CommandBar.Width" Value="auto"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='4' x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1024"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>

                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <CommandBar x:ConnectionId='5' Name="CommandBar" VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                    Margin="0,0,0,-48" Width="auto">
            <AppBarButton x:ConnectionId='10' Name="Refresh" Icon="Refresh" Label="Refresh" Visibility="Collapsed"                      />
            <AppBarButton x:ConnectionId='11' Name="Search" Icon="Find" Label="Search" Visibility="Collapsed"/>
            <AppBarButton Icon="World" Label="Change Region">
                <AppBarButton.Flyout>
                    <Flyout x:ConnectionId='13'                       >
                        <StackPanel Margin="-12">
                            <Grid x:ConnectionId='14' Height="32"                   >
                                <Rectangle x:ConnectionId='42' Name="BR_Rect">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="RoyalBlue" 
                                        Opacity="0"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock x:ConnectionId='43' Name="BR" VerticalAlignment="Center" HorizontalAlignment="Center" Text="BR"/>
                            </Grid>
                            <Grid x:ConnectionId='15' Height="32"                     >
                                <Rectangle x:ConnectionId='40' Name="EUNE_Rect">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="RoyalBlue" 
                                        Opacity="0"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock x:ConnectionId='41' Name="EUNE" VerticalAlignment="Center" HorizontalAlignment="Center" Text="EUNE"/>
                            </Grid>
                            <Grid x:ConnectionId='16' Height="32"                    >
                                <Rectangle x:ConnectionId='38' Name="EUW_Rect">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="RoyalBlue" 
                                        Opacity="0"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock x:ConnectionId='39' Name="EUW" VerticalAlignment="Center" HorizontalAlignment="Center" Text="EUW"/>
                            </Grid>
                            <Grid x:ConnectionId='17' Height="32"                   >
                                <Rectangle x:ConnectionId='36' Name="KR_Rect">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="RoyalBlue" 
                                        Opacity="0"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock x:ConnectionId='37' Name="KR" VerticalAlignment="Center" HorizontalAlignment="Center" Text="KR"/>
                            </Grid>
                            <Grid x:ConnectionId='18' Height="32"                    >
                                <Rectangle x:ConnectionId='34' Name="LAN_Rect">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="RoyalBlue" 
                                        Opacity="0"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock x:ConnectionId='35' Name="LAN" VerticalAlignment="Center" HorizontalAlignment="Center" Text="LAN"/>
                            </Grid>
                            <Grid x:ConnectionId='19' Height="32"                    >
                                <Rectangle x:ConnectionId='32' Name="LAS_Rect">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="RoyalBlue" 
                                        Opacity="0"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock x:ConnectionId='33' Name="LAS" VerticalAlignment="Center" HorizontalAlignment="Center" Text="LAS"/>
                            </Grid>
                            <Grid x:ConnectionId='20' Height="32"                   >
                                <Rectangle x:ConnectionId='30' Name="NA_Rect">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="RoyalBlue" 
                                        Opacity="0"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock x:ConnectionId='31' Name="NA" VerticalAlignment="Center" HorizontalAlignment="Center" Text="NA"/>
                            </Grid>
                            <Grid x:ConnectionId='21' Height="32"                    >
                                <Rectangle x:ConnectionId='28' Name="OCE_Rect">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="RoyalBlue" 
                                        Opacity="0"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock x:ConnectionId='29' Name="OCE" VerticalAlignment="Center" HorizontalAlignment="Center" Text="OCE"/>
                            </Grid>
                            <Grid x:ConnectionId='22' Height="32"                   >
                                <Rectangle x:ConnectionId='26' Name="RU_Rect">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="RoyalBlue" 
                                        Opacity="0"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock x:ConnectionId='27' Name="RU" VerticalAlignment="Center" HorizontalAlignment="Center" Text="RU"/>
                            </Grid>
                            <Grid x:ConnectionId='23' Height="32"                   >
                                <Rectangle x:ConnectionId='24' Name="TR_Rect">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="RoyalBlue" 
                                        Opacity="0"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <TextBlock x:ConnectionId='25' Name="TR" VerticalAlignment="Center" HorizontalAlignment="Center" Text="TR"/>
                            </Grid>
                        </StackPanel>
                    </Flyout>
                </AppBarButton.Flyout>
            </AppBarButton>
            <AppBarButton x:ConnectionId='12' Icon="Accept" Label="Sign In"                            >
                <FlyoutBase.AttachedFlyout>
                    <Flyout>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>

                            </Grid.RowDefinitions>
                            <TextBlock Text="Error Signing In" 
                                       Foreground="Red" 
                                       FontSize="20" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="possible reasons include" 
                                       HorizontalAlignment="Center"
                                       Grid.Row="1"
                                       FontSize="12"/>
                            <MenuFlyoutSeparator Grid.Row="2"/>
                            <TextBlock Text="-Invalid Summoner Name-"
                                       HorizontalAlignment="Center"
                                       Grid.Row="3"/>
                            <TextBlock Text="-Incorrect Region Setting-"
                                       HorizontalAlignment="Center"
                                       Grid.Row="4"/>
                            <TextBlock Text="-Poor Internet Connection-"
                                       HorizontalAlignment="Center"
                                       Grid.Row="5"/>
                            <TextBlock Text="-RIOT Server Timeout-"
                                       HorizontalAlignment="Center"
                                       Grid.Row="6"/>
                            <Grid Grid.Row="7" Margin="0,12,0,0">
                                <Rectangle Height="160"
                                           Width="160">
                                    <Rectangle.Fill>
                                        <SolidColorBrush Color="DimGray"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <Image Source="assets/Heimerdinger_Error.jpg" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"                                   
                                   Height="150"
                                   Width="150"
                                   Stretch="fill"/>
                            </Grid>
                        </Grid>
                    </Flyout>
                </FlyoutBase.AttachedFlyout>
            </AppBarButton>
        </CommandBar>

        <Grid x:ConnectionId='6' Name="TitleGrid"
              VerticalAlignment="Top" 
              Margin="12,-48,96,0" 
              Height="48">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:ConnectionId='8' Name="TitleBar"
                           Text="Sign In"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           FontSize="20"/>
                <Grid Height="48" Width="48">
                    <ProgressRing x:ConnectionId='9' Name="MyProgressRing"                              
                                  Width="20"
                                  Height="20"
                                  Foreground="RoyalBlue"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                </Grid>
            </StackPanel>
        </Grid>

        <Image Source="assets/Ryze_SignIn.jpg" 
               Stretch="None"
               VerticalAlignment="Top"
               HorizontalAlignment="Right"
               Margin="0,0,-184,0"/>

        <TextBox x:ConnectionId='7' Name="SummonerName" 
                 PlaceholderText="Enter Summoner Name" 
                 VerticalAlignment="Top"
                 HorizontalAlignment="Right"
                 Margin="0,172,156,0"
                 Height="24"
                 Width="192">
        </TextBox>
    </Grid>
</Page>

