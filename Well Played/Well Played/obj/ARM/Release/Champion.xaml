<Page x:ConnectionId='1'
    x:Class="Well_Played.Champion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Well_Played"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:Well_Played.Models"
    mc:Ignorable="d"                     >

    <Page.Resources>
        <ResourceDictionary>
            <Style TargetType="TextBlock" x:Key="Title">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="bold"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>
            <Style TargetType="TextBlock" x:Key="Content">
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="12,0,12,0"/>
            </Style>
            <Style TargetType="TextBlock" x:Key="SubContent">
                <Setter Property="FontSize" Value="11"/>
            </Style>
            <Style TargetType="Button" x:Key="NavButton">
                <Setter Property="Height" Value="48"/>
                <Setter Property="Width" Value="48"/>
                <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="FontSize" Value="20"/>
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='2' x:Name="WindowStates">
                <VisualState x:ConnectionId='3' x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="320"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>

                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='4' x:Name="MediumState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="600"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="Refresh.Visibility" Value="Visible"/>
                        <!--<Setter Target="Search.Visibility" Value="Visible"/>-->
                        <Setter Target="CommandBar.VerticalAlignment" Value="Top"/>
                        <Setter Target="CommandBar.HorizontalAlignment" Value="Right"/>
                        <Setter Target="CommandBar.Margin" Value="0,-48,0,0"/>
                        <Setter Target="CommandBar.Width" Value="auto"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='5' x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1024"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>

                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <CommandBar x:ConnectionId='6' Name="CommandBar" VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                    Margin="0,0,0,-48" Width="auto">
            <AppBarButton x:ConnectionId='67' Name="Refresh" Icon="Refresh" Label="Refresh" Visibility="Collapsed"                      />
            <AppBarButton x:ConnectionId='68' Name="Search" Icon="Find" Label="Search" Visibility="Collapsed"/>
        </CommandBar>
        <Grid VerticalAlignment="Top" 
              Margin="12,-48,48,0" 
              Height="48">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:ConnectionId='64' Name="TitleBar"
                           Text="Champion"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           FontSize="20"/>
                <Grid Height="48" Width="48">
                    <ProgressRing x:ConnectionId='65' Name="MyProgressRing"                              
                                  Width="20"
                                  Height="20"
                                  Foreground="RoyalBlue"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                    <Button x:ConnectionId='66' Name="Error" Style="{StaticResource NavButton}"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Content="&#xE98F;" 
                            Visibility="Collapsed" 
                            Foreground="DarkOrange"                    >
                        <FlyoutBase.AttachedFlyout>
                            <Flyout>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="Error Loading Page" 
                                       Foreground="Red" 
                                       FontSize="20" 
                                       HorizontalAlignment="Center"/>
                                    <TextBlock Text="possible reasons include" 
                                       HorizontalAlignment="Center"
                                       Grid.Row="1"
                                       FontSize="12"/>
                                    <MenuFlyoutSeparator Grid.Row="2"/>
                                    <TextBlock Text="-Poor Internet Connection-"
                                       HorizontalAlignment="Center"
                                       Grid.Row="3"/>
                                    <TextBlock Text="-RIOT Server Timeout-"
                                       HorizontalAlignment="Center"
                                       Grid.Row="4"/>
                                    <Grid Grid.Row="5" Margin="0,12,0,0">
                                        <Rectangle Height="160"
                                           Width="160">
                                            <Rectangle.Fill>
                                                <SolidColorBrush Color="DimGray"/>
                                            </Rectangle.Fill>
                                        </Rectangle>
                                        <Image Source="assets/Heimerdinger_Error.jpg" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"                                   
                                   Height="150"
                                   Width="150"
                                   Stretch="fill"/>
                                    </Grid>
                                </Grid>
                            </Flyout>
                        </FlyoutBase.AttachedFlyout>
                    </Button>
                </Grid>
            </StackPanel>
        </Grid>

        <!-- SUMMARY -->

        <Pivot>
            <PivotItem Header="Summary" Margin="0,0,0,0">
                <ScrollViewer>
                    <Grid x:ConnectionId='55' Name="SummaryAdSpace" Padding="0,0,0,62">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Image x:ConnectionId='56' Name="ChampionPortrait" Height="168" HorizontalAlignment="Right" Stretch="UniformToFill"/>
                        <Rectangle Grid.Row="1">
                            <Rectangle.Fill>
                                <SolidColorBrush Color="RoyalBlue" Opacity="0.5"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <TextBlock x:ConnectionId='57' Name="ChampTitle" Grid.Row="1" Style="{StaticResource Title}"/>
                        <TextBlock x:ConnectionId='58' Name="ChampLore" 
                                Grid.Row="2" 
                                TextWrapping="WrapWholeWords"
                                MaxHeight="200"
                                Margin="24,12,24,0"/>
                        <Grid x:ConnectionId='59' Grid.Row="3" HorizontalAlignment="Right" Margin="0,4,12,4"                     >
                            <Rectangle x:ConnectionId='62' Name="MoreRect" Width="72" Height="24" HorizontalAlignment="Right"
                                       RadiusX="12" RadiusY="12">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="RoyalBlue" Opacity="0.5"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <TextBlock x:ConnectionId='63' Name="MoreBlock"
                                       Text="more"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Margin="0,0,0,4"/>
                        </Grid>
                        <Rectangle Grid.Row="4">
                            <Rectangle.Fill>
                                <SolidColorBrush Color="RoyalBlue" Opacity="0.5"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <TextBlock Text="Tags" Grid.Row="4" Style="{StaticResource Title}"/>
                        <StackPanel Orientation="Horizontal"
                                    Grid.Row="5"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,12">
                            <TextBlock x:ConnectionId='60' Name="PrimaryTag"
                                       HorizontalAlignment="Center"
                                       FontSize="36"/>
                            <TextBlock x:ConnectionId='61' Name="SecondaryTag"
                                       HorizontalAlignment="Center"
                                       FontSize="36"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </PivotItem>

            <!-- ABILITIES -->

            <PivotItem Header="Abilities" Margin="0,0,0,0">
                <ScrollViewer>
                    <StackPanel x:ConnectionId='27' Name="AbilitiesAdSpace"  Padding="0,0,0,62">
                        <!--Passive-->
                        <Grid Margin="0,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                            </Grid.ColumnDefinitions>
                            <Rectangle Grid.ColumnSpan="4">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="RoyalBlue" 
                                                     Opacity="0.5"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <TextBlock x:ConnectionId='52' Name="SpellNameP"
                                       Grid.ColumnSpan="4"
                                       Style="{StaticResource Title}"/>
                            <TextBlock Text="Passive"
                                       Grid.Column="1"
                                       Grid.ColumnSpan="2"
                                       Style="{StaticResource SubContent}"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                            <Grid VerticalAlignment="Top" Grid.Row="1" Grid.Column="1"  Margin="0,8,0,0">
                                <Rectangle Width="52" Height="52" RadiusX="14" RadiusY="14" Fill="DimGray"
                                    HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Rectangle Width="48" 
                                    Height="48"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    RadiusX="12"
                                    RadiusY="12">
                                    <Rectangle.Fill>
                                        <ImageBrush x:ConnectionId='54' x:Name="SpellIconP"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                            </Grid>
                            <TextBlock x:ConnectionId='53' Name="SpellDescriptionP"
                                       Grid.Column="2"
                                       Grid.ColumnSpan="1"
                                       Grid.Row="1" 
                                       TextWrapping="WrapWholeWords"
                                       Margin="12,4,12,0"/>
                        </Grid>

                        <!--Q-->
                        <Grid Margin="0,12,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                            </Grid.ColumnDefinitions>
                            <Rectangle Grid.ColumnSpan="4">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="RoyalBlue" 
                                                     Opacity="0.5"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <TextBlock x:ConnectionId='46' Name="SpellName0"
                                       Grid.ColumnSpan="4"
                                       Style="{StaticResource Title}"/>
                            <TextBlock Text="Q"
                                       Grid.Column="1"
                                       Grid.ColumnSpan="2"
                                       Style="{StaticResource SubContent}"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                            <Rectangle Width="52" Height="52" RadiusX="14" RadiusY="14" Fill="DimGray" Margin="0,4,0,4"
                                    Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Rectangle Width="48" 
                                    Height="48"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    RadiusX="12"
                                    RadiusY="12">
                                <Rectangle.Fill>
                                    <ImageBrush x:ConnectionId='51' x:Name="SpellIcon0"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <Grid VerticalAlignment="Center" Height="Auto" Grid.Row="1" Grid.Column="2">
                                <StackPanel Grid.Row="1" Grid.Column="2" Margin="12">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Cooldown:"
                                               HorizontalAlignment="Center"
                                               Style="{StaticResource SubContent}"/>
                                        <TextBlock x:ConnectionId='50' Name="SpellCooldown0"
                                               HorizontalAlignment="Center"
                                               Style="{StaticResource SubContent}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Cost:"
                                               HorizontalAlignment="Center"
                                               Style="{StaticResource SubContent}"/>
                                        <TextBlock x:ConnectionId='49' Name="SpellCost0"
                                               HorizontalAlignment="Center"
                                               Style="{StaticResource SubContent}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Range:"
                                               HorizontalAlignment="Center"
                                               Style="{StaticResource SubContent}"/>
                                        <TextBlock x:ConnectionId='48' Name="SpellRange0"
                                               HorizontalAlignment="Center"
                                               Style="{StaticResource SubContent}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                            <TextBlock x:ConnectionId='47' Name="SpellDescription0"
                                       Grid.Column="1"
                                       Grid.ColumnSpan="2"
                                       Grid.Row="2" 
                                       TextWrapping="WrapWholeWords"/>
                        </Grid>

                        <!--W-->
                        <Grid Margin="0,12,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                            </Grid.ColumnDefinitions>
                            <Rectangle Grid.ColumnSpan="4">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="RoyalBlue" 
                                                     Opacity="0.5"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <TextBlock x:ConnectionId='40' Name="SpellName1"
                                       Grid.ColumnSpan="4"
                                       Style="{StaticResource Title}"/>
                            <TextBlock Text="W"
                                       Grid.Column="1"
                                       Grid.ColumnSpan="2"
                                       Style="{StaticResource SubContent}"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                            <Rectangle Width="52" Height="52" RadiusX="14" RadiusY="14" Fill="DimGray" Margin="0,4,0,4"
                                    Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Rectangle Width="48" 
                                    Height="48"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    RadiusX="12"
                                    RadiusY="12">
                                <Rectangle.Fill>
                                    <ImageBrush x:ConnectionId='45' x:Name="SpellIcon1"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <Grid VerticalAlignment="Center" Height="Auto" Grid.Row="1" Grid.Column="2">
                                <StackPanel Grid.Row="1" Grid.Column="2" Margin="12">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Cooldown:"
                                               HorizontalAlignment="Center"
                                               Style="{StaticResource SubContent}"/>
                                        <TextBlock x:ConnectionId='44' Name="SpellCooldown1"
                                               HorizontalAlignment="Center"
                                               Style="{StaticResource SubContent}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Cost:"
                                               HorizontalAlignment="Center"
                                               Style="{StaticResource SubContent}"/>
                                        <TextBlock x:ConnectionId='43' Name="SpellCost1"
                                               HorizontalAlignment="Center"
                                               Style="{StaticResource SubContent}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Range:"
                                               HorizontalAlignment="Center"
                                               Style="{StaticResource SubContent}"/>
                                        <TextBlock x:ConnectionId='42' Name="SpellRange1"
                                               HorizontalAlignment="Center"
                                               Style="{StaticResource SubContent}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                            <TextBlock x:ConnectionId='41' Name="SpellDescription1"
                                       Grid.Column="1"
                                       Grid.ColumnSpan="2"
                                       Grid.Row="2" 
                                       TextWrapping="WrapWholeWords"/>
                        </Grid>

                        <!--E-->
                        <Grid Margin="0,12,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                            </Grid.ColumnDefinitions>
                            <Rectangle Grid.ColumnSpan="4">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="RoyalBlue" 
                                                     Opacity="0.5"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <TextBlock x:ConnectionId='34' Name="SpellName2"
                                       Grid.ColumnSpan="4"
                                       Style="{StaticResource Title}"/>
                            <TextBlock Text="E"
                                       Grid.Column="1"
                                       Grid.ColumnSpan="2"
                                       Style="{StaticResource SubContent}"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                            <Rectangle Width="52" Height="52" RadiusX="14" RadiusY="14" Fill="DimGray" Margin="0,4,0,4"
                                    Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Rectangle Width="48" 
                                    Height="48"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    RadiusX="12"
                                    RadiusY="12">
                                <Rectangle.Fill>
                                    <ImageBrush x:ConnectionId='39' x:Name="SpellIcon2"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <Grid VerticalAlignment="Center" Height="Auto" Grid.Row="1" Grid.Column="2">
                                <StackPanel Grid.Row="1" Grid.Column="2" Margin="12">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Cooldown:"
                                               HorizontalAlignment="Center"
                                               Style="{StaticResource SubContent}"/>
                                        <TextBlock x:ConnectionId='38' Name="SpellCooldown2"
                                               HorizontalAlignment="Center"
                                               Style="{StaticResource SubContent}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Cost:"
                                               HorizontalAlignment="Center"
                                               Style="{StaticResource SubContent}"/>
                                        <TextBlock x:ConnectionId='37' Name="SpellCost2"
                                               HorizontalAlignment="Center"
                                               Style="{StaticResource SubContent}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Range:"
                                               HorizontalAlignment="Center"
                                               Style="{StaticResource SubContent}"/>
                                        <TextBlock x:ConnectionId='36' Name="SpellRange2"
                                               HorizontalAlignment="Center"
                                               Style="{StaticResource SubContent}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                            <TextBlock x:ConnectionId='35' Name="SpellDescription2"
                                       Grid.Column="1"
                                       Grid.ColumnSpan="2"
                                       Grid.Row="2" 
                                       TextWrapping="WrapWholeWords"/>
                        </Grid>

                        <!--R-->
                        <Grid Margin="0,12,0,12">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="12"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="12"/>
                            </Grid.ColumnDefinitions>
                            <Rectangle Grid.ColumnSpan="4">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="RoyalBlue" 
                                                     Opacity="0.5"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <TextBlock x:ConnectionId='28' Name="SpellName3"
                                       Grid.ColumnSpan="4"
                                       Style="{StaticResource Title}"/>
                            <TextBlock Text="R"
                                       Grid.Column="1"
                                       Grid.ColumnSpan="2"
                                       Style="{StaticResource SubContent}"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                            <Rectangle Width="52" Height="52" RadiusX="14" RadiusY="14" Fill="DimGray" Margin="0,4,0,4"
                                    Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Rectangle Width="48" 
                                    Height="48"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    RadiusX="12"
                                    RadiusY="12">
                                <Rectangle.Fill>
                                    <ImageBrush x:ConnectionId='33' x:Name="SpellIcon3"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <Grid VerticalAlignment="Center" Height="Auto" Grid.Row="1" Grid.Column="2">
                                <StackPanel Grid.Row="1" Grid.Column="2" Margin="12">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Cooldown:"
                                               HorizontalAlignment="Center"
                                               Style="{StaticResource SubContent}"/>
                                        <TextBlock x:ConnectionId='32' Name="SpellCooldown3"
                                               HorizontalAlignment="Center"
                                               Style="{StaticResource SubContent}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Cost:"
                                               HorizontalAlignment="Center"
                                               Style="{StaticResource SubContent}"/>
                                        <TextBlock x:ConnectionId='31' Name="SpellCost3"
                                               HorizontalAlignment="Center"
                                               Style="{StaticResource SubContent}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Range:"
                                               HorizontalAlignment="Center"
                                               Style="{StaticResource SubContent}"/>
                                        <TextBlock x:ConnectionId='30' Name="SpellRange3"
                                               HorizontalAlignment="Center"
                                               Style="{StaticResource SubContent}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                            <TextBlock x:ConnectionId='29' Name="SpellDescription3"
                                       Grid.Column="1"
                                       Grid.ColumnSpan="2"
                                       Grid.Row="2" 
                                       TextWrapping="WrapWholeWords"/>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>

            <!-- STATS -->

            <PivotItem Header="Stats" Margin="0,0,0,0" Padding="0,0,0,0">
                <Grid x:ConnectionId='7' Name="StatsAdSpace" Padding="0,0,0,62">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Padding="12" HorizontalAlignment="Left" Margin="12,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Rectangle x:ConnectionId='25' Name="AttackBar" HorizontalAlignment="Left" Height="24" Fill="DarkRed"/>
                            <TextBlock x:ConnectionId='26' Name="AttackBlock" Text="Attack" FontWeight="Bold" Margin="8,0,0,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle x:ConnectionId='23' Name="DefenseBar" HorizontalAlignment="Left" Height="24" Fill="DarkGreen"/>
                            <TextBlock x:ConnectionId='24' Name="DefenseBlock" Text="Defense" FontWeight="Bold" Margin="8,0,0,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle x:ConnectionId='21' Name="AbilityBar" HorizontalAlignment="Left" Height="24" Fill="DarkBlue"/>
                            <TextBlock x:ConnectionId='22' Name="AbilityBlock" Text="Magic" FontWeight="Bold" Margin="8,0,0,0"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Rectangle x:ConnectionId='19' Name="DifficultyBar" HorizontalAlignment="Left" Height="24" Fill="DarkMagenta"/>
                            <TextBlock x:ConnectionId='20' Name="DifficultyBlock" Text="Difficulty" FontWeight="Bold"  Margin="8,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Grid.ColumnSpan="6">
                            <Rectangle.Fill>
                                <SolidColorBrush Color="RoyalBlue" Opacity="0.5"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <TextBlock Text="Per Level Stats"
                                   Style="{StaticResource Title}"
                                   Grid.Column="1"
                                   Grid.ColumnSpan="4"/>
                        <TextBlock Text="Range" Grid.Row="1" Grid.Column="1"/>
                        <TextBlock x:ConnectionId='8' Name="RangeNum" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center"/>
                        <TextBlock Text="Health" Grid.Row="2" Grid.Column="1"/>
                        <TextBlock x:ConnectionId='9' Name="HealthNum" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Center"/>
                        <TextBlock Text="HealthRegen" Grid.Row="3" Grid.Column="1"/>
                        <TextBlock x:ConnectionId='10' Name="HealthRegenNum" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Center"/>
                        <TextBlock Text="Mana" Grid.Row="4" Grid.Column="1"/>
                        <TextBlock x:ConnectionId='11' Name="ManaNum" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Center"/>
                        <TextBlock Text="ManaRegen" Grid.Row="5" Grid.Column="1"/>
                        <TextBlock x:ConnectionId='12' Name="ManaRegenNum" Grid.Row="5" Grid.Column="2" HorizontalAlignment="Center"/>


                        <TextBlock Text="Movespeed" Grid.Row="1" Grid.Column="3"/>
                        <TextBlock x:ConnectionId='13' Name="MovespeedNum" Grid.Row="1" Grid.Column="4" HorizontalAlignment="Center"/>
